<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- todo (07) Сделать 3 кнопки с id=red_button, id=yellow_button, id=green_button, с высотой и длиной равной wrap_content, c шрифтом roboto, c текстами "RED", "YELLOW", "GREEN" соответственно, c горизонтальным смещением в 50%. И сделать так, чтобы они все были снизу с отступом в 16dp, и привязаны друг к другу. -->
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_wide"
        android:layout_marginStart="@dimen/margin_wide"
        android:layout_marginTop="16dp"
        android:text="@string/box_one"
        android:background="@color/white"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/box_one_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/box_two_text"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@color/white"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_wide"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/box_one_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/label_text"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/box_three_text"
        style="@style/whiteBox"
        android:text="@string/box_three"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/box_four_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box_two_text"
        app:layout_constraintTop_toTopOf="@id/box_two_text"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/box_four_text"
        style="@style/whiteBox"
        android:text="@string/box_four"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/box_three_text"
        app:layout_constraintBottom_toTopOf="@id/box_five_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/box_two_text"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/box_five_text"
        style="@style/whiteBox"
        android:text="@string/box_five"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/box_two_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box_four_text"
        app:layout_constraintStart_toEndOf="@id/box_two_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_text"
        android:layout_marginStart="@dimen/margin_wide"
        android:fontFamily="@font/roboto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="This is the game:"
        app:layout_constraintBaseline_toBaselineOf="@id/info_text"
        app:layout_constraintStart_toStartOf="parent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_text"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto"

        android:text="@string/tap_the_boxes_and_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_text"
        app:layout_constraintTop_toBottomOf="@id/box_two_text"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red_button"
        android:fontFamily="@font/roboto"
        android:text="@string/button_red"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/yellow_button"
        app:layout_constraintEnd_toStartOf="@id/yellow_button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yellow_button"
        android:fontFamily="@font/roboto"
        android:text="@string/button_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/green_button"
        app:layout_constraintStart_toEndOf="@id/red_button"
        app:layout_constraintTop_toBottomOf="@id/label_text"
        android:layout_marginTop="8dp"
        app:layout_goneMarginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/green_button"
        android:fontFamily="@font/roboto"
        android:text="@string/button_green"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/yellow_button"
        app:layout_constraintBaseline_toBaselineOf="@id/yellow_button"
        />
</android.support.constraint.ConstraintLayout>